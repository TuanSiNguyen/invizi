<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link href="static/css/font-awesome.min.css" rel="stylesheet">
    <link href="static/bootstrap/css/bootstrap.css" rel="stylesheet">
    <title>Invizi</title>
    <% if (htmlWebpackPlugin.options.nodeModules) { %>
    <!-- Add `node_modules/` to global paths so `require` works properly in development -->
    <script>
      require('module').globalPaths.push('<%= htmlWebpackPlugin.options.nodeModules.replace(/\\/g, '\\\\') %>')
    </script>
    <% } %>
    <link href="static/css/invizi-pre.css" rel="stylesheet">
    <link href="static/css/vuetify.css" rel="stylesheet">
    <link href="static/css/fonts/fira-mono.css" rel="stylesheet">
    <link href='static/css/fonts/roboto.css' rel="stylesheet">
    <link href='static/css/fonts/open-sans.css' rel="stylesheet">
    <link href="static/css/animate.css" rel="stylesheet">
    <link href="static/css/quill.snow.css" rel="stylesheet">
    <link href="static/css/invizi.css" rel="stylesheet">
  </head>

  <body class="dark-skin">
    <div id="app"></div>

    <!-- SCRIPTS -->
    <!-- Set `__static` path to static files in production -->
    <script>
      if (process.env.NODE_ENV !== 'development') window.__static = require('path').join(__dirname, '/static').replace(/\\/g, '\\\\')
    </script>

    <!-- webpack builds are automatically injected -->
    <script>window.math = require('mathjs');</script>
    <script>window.TWEEN = require('@tweenjs/tween.js');</script>
    <script src="static/js/plotly-latest.min.js"></script>
    <script src="static/js/rxjs.umd.min.js"></script>
    </body>
</html>
